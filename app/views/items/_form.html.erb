<% @item.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>


<div class="container">
<%= form_for [@city,@item] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control form", placeholder:"Name"  %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :"Photo URL" %>
    <%= f.text_field :img_url, class: "form-control", placeholder:"Photo URL" %>
</div>

    <br>
    <%= f.submit %>

<% end %>
